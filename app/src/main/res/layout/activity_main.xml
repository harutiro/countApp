<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/karaage_puls_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+1"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toStartOf="@+id/pet_puls_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/pet_puls_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+1"
        app:layout_constraintBottom_toBottomOf="@+id/karaage_puls_button"
        app:layout_constraintEnd_toStartOf="@+id/potato_puls_button"
        app:layout_constraintStart_toEndOf="@+id/karaage_puls_button"
        app:layout_constraintTop_toTopOf="@+id/karaage_puls_button" />

    <Button
        android:id="@+id/potato_puls_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+1"
        app:layout_constraintBottom_toBottomOf="@+id/karaage_puls_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pet_puls_button"
        app:layout_constraintTop_toTopOf="@+id/karaage_puls_button" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:layout_constraintBottom_toTopOf="@+id/karaage_min_button"
        app:layout_constraintEnd_toEndOf="@+id/karaage_puls_button"
        app:layout_constraintStart_toStartOf="@+id/karaage_puls_button"
        app:layout_constraintTop_toBottomOf="@+id/karaage_puls_button"
        app:srcCompat="@drawable/karaage" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/pet_puls_button"
        app:layout_constraintStart_toStartOf="@+id/pet_puls_button"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:srcCompat="@drawable/pet" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/potato_puls_button"
        app:layout_constraintStart_toStartOf="@+id/potato_puls_button"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:srcCompat="@drawable/poteto" />

    <Button
        android:id="@+id/karaage_min_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-1"
        app:layout_constraintBottom_toTopOf="@+id/karaage_text"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/pet_min_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-1"
        app:layout_constraintBottom_toBottomOf="@+id/karaage_min_button"
        app:layout_constraintEnd_toStartOf="@+id/potato_min_button"
        app:layout_constraintStart_toEndOf="@+id/karaage_min_button"
        app:layout_constraintTop_toTopOf="@+id/karaage_min_button" />

    <Button
        android:id="@+id/potato_min_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-1"
        app:layout_constraintBottom_toBottomOf="@+id/karaage_min_button"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/karaage_min_button" />

    <TextView
        android:id="@+id/karaage_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/karaage_min_button"
        app:layout_constraintStart_toStartOf="@+id/karaage_min_button"
        app:layout_constraintTop_toBottomOf="@+id/karaage_min_button" />

    <TextView
        android:id="@+id/pet_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="@+id/karaage_text"
        app:layout_constraintEnd_toEndOf="@+id/pet_min_button"
        app:layout_constraintStart_toStartOf="@+id/pet_min_button"
        app:layout_constraintTop_toTopOf="@+id/karaage_text" />

    <TextView
        android:id="@+id/potato_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="@+id/karaage_text"
        app:layout_constraintEnd_toEndOf="@+id/potato_min_button"
        app:layout_constraintStart_toStartOf="@+id/potato_min_button"
        app:layout_constraintTop_toTopOf="@+id/karaage_text" />
</androidx.constraintlayout.widget.ConstraintLayout>